<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>eu.europa.ec.fisheries.uvms.user</groupId>
  <artifactId>user</artifactId>
  <version>2.0.0</version>
  <packaging>pom</packaging>

  <properties>
    <junit.version>4.10</junit.version>
    <mockito.version>1.9.5</mockito.version>
    <javaee.version>7.0</javaee.version>
    <swagger.version>1.3.1</swagger.version>
    <slf4j.version>1.7.2</slf4j.version>
    <logback.version>1.1.2</logback.version>
    <logback.core.version>1.1.2</logback.core.version>
    <usm.information.version>2.0.0</usm.information.version>
    <usm.jwt-handler.version>2.0.0</usm.jwt-handler.version>
    <usm.authentication.version>2.0.0</usm.authentication.version>
    <usm.administration.version>2.0.0</usm.administration.version>
    <uvms.logger.version>1.2.0</uvms.logger.version>
</properties>

  <dependencies>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-api</artifactId>
      <scope>provided</scope>
      <version>${javaee.version}</version>
    </dependency>

    <!-- LOGGING DEPENDENCIES -->
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
    </dependency>
    <dependency>
      <groupId>ch.qos.logback</groupId>
      <artifactId>logback-core</artifactId>
      <version>${logback.core.version}</version>
    </dependency>

    <!-- TEST -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>${mockito.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <distributionManagement>
    <repository>
        <id>focus-releases</id>
        <name>UnionVms Repository</name>
        <url>http://nexus.focus.fish/nexus/content/repositories/releases/</url>
    </repository>
    <snapshotRepository>
        <id>focus-snapshots</id>
        <name>UnionVms Snapshot Repository</name>
        <url>http://nexus.focus.fish/nexus/content/repositories/snapshots/</url>
    </snapshotRepository>
</distributionManagement>
  <build>
    <plugins>
        <plugin>
          <groupId>external.atlassian.jgitflow</groupId>
          <artifactId>jgitflow-maven-plugin</artifactId>
          <version>1.0-m5.1</version>
          <configuration>
            <flowInitContext>
             <masterBranchName>master</masterBranchName>
             <developBranchName>development</developBranchName>
             <featureBranchPrefix>feature-</featureBranchPrefix>
             <releaseBranchPrefix>release-</releaseBranchPrefix>
             <hotfixBranchPrefix>hotfix-</hotfixBranchPrefix>
           </flowInitContext>
           <username>${jgitflow.username}</username>
           <password>${jgitflow.password}</password>
          </configuration>
        </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8</version>
        <configuration>
          <deployAtEnd>true</deployAtEnd>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10.4</version>
            <configuration>
              <additionalparam>-Xdoclint:none</additionalparam>
            </configuration>
      </plugin>
    </plugins>
  </build>
  
  <scm>
    <connection>scm:git:https://github.com/UnionVMS/UVMS-User-APP.git</connection>
    <url>https://github.com/UnionVMS/UVMS-User-APP</url>
    <tag>HEAD</tag>
  </scm>
  
  <modules>
    <module>rest</module>
    <module>service</module>
    <module>message</module>
    <module>model</module>
    <module>module</module>
  </modules>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>1.7.2</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>